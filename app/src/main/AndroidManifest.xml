<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipes" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cook_book_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".AppController">
        <activity
            android:name=".views.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.RecipeDetailsActivity_"
            android:label="@string/title_activity_recipe_details"
            android:parentActivityName=".views.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.recipes.views.MainActivity" />
        </activity>
        <activity
            android:name=".views.MainFragmentActivity"
            android:label="@string/title_activity_main_fragment" >
        </activity>
    </application>

</manifest>
