<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin_normal_layout"
                android:paddingBottom="@dimen/activity_vertical_margin_normal_layout"
                android:orientation="vertical"
                tools:context="com.recipes.views.RecipeDetailsActivity"
                android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityRecipeDetailsTvTitle"
        android:text="@string/default_text"
        android:textSize="@dimen/detail_title_size"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityRecipeDetailsTvSubtitle"
        android:text="@string/default_text"
        android:textSize="@dimen/subtitle_size"
        android:layout_below="@+id/activityRecipeDetailsTvTitle"
        android:layout_alignParentStart="true"
        android:textColor="@color/grey"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/activityRecipeDetailsIvImage"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/activityRecipeDetailsTvSubtitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityRecipeDetailsTvDescription"
        android:text="@string/default_text"
        android:layout_below="@+id/activityRecipeDetailsIvImage"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"/>
</RelativeLayout>
