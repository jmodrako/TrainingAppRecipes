<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#4285f4</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#3367d6</item>
        <item name="android:titleTextAppearance">@style/AppTitleStyle</item>
    </style>

    <style name="AppTitleStyle" parent="android:TextAppearance.Material.Title">
        <item name="android:paddingLeft">5dp</item>
    </style>
    รณ

    <style name="TitleTextStyle" parent="android:TextAppearance.Material.Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleTextStyle" parent="android:TextAppearance.Material.Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="DescriptionTextStyle" parent="android:TextAppearance.Material.Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/description_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
